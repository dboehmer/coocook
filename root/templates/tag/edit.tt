<h2>Tag [% tag.name | html %]</h2>

[% IF tag.deletable %]
<form action="[% c.project_uri('/tag/delete', tag.id) %]" method="POST">
    <input type="submit" value="Delete Tag">
</form>
[% END %]

<form action="[% c.project_uri('/tag/update', tag.id) %]" method="POST">
    <fieldset>
        <legend>Edit Tag</legend>
        <input type="text" name="name" value="[% tag.name | html %]">
        <select name="tag_group">
            <option value="">(no tag group)</option>
[% FOR group IN groups %]
            <option value="[% group.id %]" [% 'selected' IF group.id == tag.tag_group.id %]>[% group.name | html %]</option>
[% END %]
        </select>
        <input type="submit" value="Edit">
    </fieldset>
</form>

<h3>Articles</h3>

<ul>
[% FOREACH article IN articles %]
    <li><a href="[% c.project_uri('/article/index') %]">[% article.name | html %]</a></li>
[% END %]
</ul>

<h3>Dishes</h3>

<ul>
[% FOREACH dish IN dishes %]
    <li><a href="[% c.project_uri('/meal/edit', dish.meal.id) %]">[% dish.name | html %]</a></li>
[% END %]
</ul>

<h3>Recipes</h3>

<ul>
[% FOREACH recipe IN recipes %]
    <li><a href="[% c.project_uri('/recipe/edit', recipe.id) %]">[% recipe.name | html %]</a></li>
[% END %]
</ul>

