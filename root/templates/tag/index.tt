<form action="[% c.project_uri('/tag/create_group') %]" method="POST">
    <fieldset>
        <legend>New Tag Group</legend>
        <p>
            <label for="new_group_name">Name:</label>
            <input  id="new_group_name" type="text" name="name" placeholder="name">
        </p>
        <p>
            <label for="new_group_comment">Comment:</label>
            <input  id="new_group_comment" type="text" name="comment" placeholder="comment">
        </p>
        <input type="submit" value="Create">
    </fieldset>
</form>

[% FOR group IN groups %]
<h3>Tag Group [% group.name | html %]</h3>

[% IF group.deletable %]
<form action="[% c.project_uri('/tag/delete_group', group.id) %]" method="POST">
    <input type="submit" value="Delete Tag Group">
</form>
[% END %]

<form action="[% c.project_uri('/tag/update_group', group.id) %]" method="POST">
    <fieldset>
        <legend>Edit Tag Group</legend>
        <p>
            <label for="group[% group.id %]name">Name:</label>
            <input  id="group[% group.id %]name" type="text" name="name" value="[% group.name | html %]">
        </p>
        <p>
            <label for="group[% group.id %]comment">Comment:</label>
            <input  id="group[% group.id %]comment" type="text" name="comment" value="[% group.comment %]">
        </p>
        <input type="submit" value="Edit">
    </fieldset>
</form>

<p>Tags:
    [% FOR tag IN group.tags_rs.all %]
    <a href="[% c.project_uri('/tag/edit', tag.id) %]">[% tag.name | html %]</a>
    [% END %]
</p>

<form action="[% c.project_uri('/tag/create') %]" method="POST">
    <input type="hidden" name="tag_group" value="[% group.id %]">
    <fieldset>
        <legend>New Tag</legend>
        <input type="text" name="name" placeholder="name">
        <input type="submit" value="Create">
    </fieldset>
</form>
[% END %]

<h3>Other Tags</h3>

<p>Tags:
[% FOR tag IN other_tags %]
    <a href="[% c.project_uri('/tag/edit', tag.id) %]">[% tag.name | html %]</a>
[% END %]
</p>

<form action="[% c.project_uri('/tag/create') %]" method="POST">
    <fieldset>
        <legend>New Tag</legend>
        <input type="text" name="name" placeholder="name">
        <input type="submit" value="Create">
    </fieldset>
</form>
