[% escape_title( 'Group', group.display_name ) %]

<p>Name: [% group.name %]</p>

<form method="post" action="[% update_url %]">
    <input type="text" name="display_name" value="[% group.display_name %]">
    <p><input type="submit" value="Update"></p>
</form>

<form method="post" action="[% update_url %]">
    <textarea class="with-markdown-preview" name="description_md">[% group.description_md | html %]</textarea>
    <p><input type="submit" value="Update"></p>
</form>

