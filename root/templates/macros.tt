MACRO numerus(number, singular, plural, opts) BLOCK; # apply correct grammatical number
    IF opts.nice_number;
        USE NiceNumber;
        number | $NiceNumber;
    ELSE;
        number;
    END;
    ' ';
    opts.infix _ ' ' IF opts.infix;
    number == 1 ? singular : plural;
END ~%]
