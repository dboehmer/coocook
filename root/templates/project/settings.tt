[% escape_title( "Project settings", project.name ) %]

<form method="post" action="[% update_url %]">
    <textarea class="with-markdown-preview" name="description" cols="80" rows="10">[% project.description | html %]</textarea>

    <input type="submit" value="Update project">
</form>

<form action="[% rename_url %]" method="post">
    <fieldset>
        <legend>Rename project <em>[% project.name | html %]</em></legend>
        <p>
            <strong>Existing web links and bookmarks will break when you rename the project!</strong>
            Except for special characters and changing lower/upper case.
        </p>
        <input type="text" name="name" value="[% project.name | html %]">
        <input type="submit" value="Rename project">
    </fieldset>
</form>

<form method="post" action="[% visibility_url %]">
    <fieldset>
        <legend>Visibility</legend>
        <p>Project is: <strong>[% project.is_public ? 'public' : 'üîíprivate' %]</strong></p>
[% IF NOT project.is_public %]
        <input type="hidden" name="public" value="on">
[% END %]
        <input type="submit" value="[% project.is_public ? 'Make üîíprivate' : 'Make public' %]">
    </fieldset>
</form>

<fieldset>
    <legend>Archiving</legend>
    <p>This project is [% project.archived ? 'üìÅ' : '<strong>not</strong>' %] archived.</p>

    <form method="post" action="[% project.archived ? project_urls.unarchive : project_urls.archive %]">
        <input type="submit" value="[% project.archived ? 'Un-archive' : 'Archive' %]">
    </form>
</fieldset>

<form method="post" action="[% delete_url %]">
    <fieldset>
        <legend>Delete project <em>[% project.name | html %]</em></legend>
        <p>Type <code>[% deletion_confirmation %]</code> to confirm deletion of project <em>[% project.name | html %]</em>.</p>
        <input type="text" name="confirmation" autocomplete="off">
        <input type="submit" value="Delete project">
    </fieldset>
</form>
