<html lang="en">
<head>
    <title>[% c.config.name %]</title>

    <meta charset="UTF-8">

[% FOREACH path IN css %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/' _ path) %]">
[% END %]
</head>

<body>

<header class="navbar">
<h1>
    <a href="[% c.uri_for('/') %]">[% c.config.name %]</a>
    <a href="[% c.uri_for_action('/project/edit', my_project.id) %]">[% my_project.name %]</a>
</h1>

[% FOREACH error IN errors %]
