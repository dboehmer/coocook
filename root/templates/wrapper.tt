<html lang="en">
<head>
    <title>[% c.config.name %]</title>

    <meta charset="UTF-8">

[% FOREACH path IN css %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/' _ path) %]">
[% END %]
</head>

<body>

<header>
<h1>
    <a class="mainlinks" href="[% c.uri_for('/') %]">[% c.config.name %]</a>
    <a class="mainlinks" href="[% c.uri_for_action('/project/edit', my_project.id) %]">[% my_project.name %]</a>
</h1>

<nav>
<ul>
[% IF user %]
<a href="[% c.uri_for_action('/dashboard') %]"><li>Dashboard</li></a>
[% ELSE %]
<a href="[% c.uri_for_action('/login') %]"><li>Login</li></a>
[% END %]
<a href="[% c.uri_for_action('/project/index') %]"><li>Projects</li></a>
<a href="[% c.uri_for_action('/recipe/index') %]"><li>Recipes</li></a>
<a href="[% c.uri_for_action('/article/index') %]"><li>Articles</li></a>
<a href="[% c.uri_for_action('/tag/index') %]"><li>Tags</li></a>
<a href="[% c.uri_for_action('/items/unassigned') %]"><li>Unassigned Items</li></a>
<a href="[% c.uri_for_action('/purchase_list/index') %]"><li>Purchase Lists</li></a>
<a href="[% c.uri_for_action('/print/index') %]"><li>Printing</li></a>
<a href="[% c.uri_for_action('/shop_section/index') %]"><li>Shop sections</li></a>
<a href="[% c.uri_for_action('/quantity/index') %]"><li>Quantities</li></a>
<a href="[% c.uri_for_action('/unit/index') %]"><li>Units</li></a>
</ul>
</nav>
</header>

<div class="content">
[% FOREACH error IN errors %]
    <p class="error">[% error | xml %]</p>
[% END %]


[% content %]
</div>

<footer>
