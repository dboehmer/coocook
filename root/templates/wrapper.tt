<html lang="en">
<head>
    <title>[% c.config.name | html %]</title>

    <meta charset="UTF-8">

[% FOREACH path IN css %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/' _ path) %]">
[% END %]
</head>

<body>

<header>
<h1>
    <a href="[% c.uri_for('/') %]">[% c.config.name | html %]</a>
[%~ IF project ~%]
    :
    <a href="[% c.project_uri('/project/edit') %]">[% project.name | html %]</a>
[% END %]
</h1>

<nav>
<ul>
[% IF user %]
<a href="[% c.uri_for_action('/index') %]"><li>Dashboard</li></a>
[% ELSE %]
<a href="[% c.uri_for_action('/login') %]"><li>Login</li></a>
[% END %]

[% IF project %]
<a href="[% c.project_uri('/project/edit') %]"><li>Meals &amp; Dishes</li></a>
<a href="[% c.project_uri('/recipe/index') %]"><li>Recipes</li></a>
<a href="[% c.project_uri('/article/index') %]"><li>Articles</li></a>
<a href="[% c.project_uri('/tag/index') %]"><li>Tags</li></a>
<a href="[% c.project_uri('/items/unassigned') %]"><li>Unassigned Items</li></a>
<a href="[% c.project_uri('/purchase_list/index') %]"><li>Purchase Lists</li></a>
<a href="[% c.project_uri('/print/index') %]"><li>Printing</li></a>
<a href="[% c.project_uri('/shop_section/index') %]"><li>Shop sections</li></a>
<a href="[% c.project_uri('/quantity/index') %]"><li>Quantities</li></a>
<a href="[% c.project_uri('/unit/index') %]"><li>Units</li></a>
[% END %]
</ul>
</nav>
</header>

<div class="content">
[% FOREACH error IN errors %]
    <p class="error">[% error | xml %]</p>
[% END %]


[% content %]
</div>

<footer>
