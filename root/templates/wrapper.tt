<html lang="en">
<head>
    <title>[% c.config.name %]</title>

    <meta charset="UTF-8">

[% FOREACH path IN css %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/' _ path) %]">
[% END %]
</head>

<body>

<header>
<h1>
    <a class="mainlinks" href="[% c.uri_for('/') %]">[% c.config.name %]</a>
[% IF project %]
    <a class="mainlinks" href="[% c.uri_for_action('/project/edit', [project.id]) %]">[% project.name | html %]</a>
[% END %]
</h1>

<nav>
<ul>
[% IF user %]
<a href="[% c.uri_for_action('/index') %]"><li>Dashboard</li></a>
[% ELSE %]
<a href="[% c.uri_for_action('/login') %]"><li>Login</li></a>
[% END %]

[% IF project %]
<a href="[% c.uri_for_action('/recipe/index',        [project.id]) %]"><li>Recipes</li></a>
<a href="[% c.uri_for_action('/article/index',       [project.id]) %]"><li>Articles</li></a>
<a href="[% c.uri_for_action('/tag/index',           [project.id]) %]"><li>Tags</li></a>
<a href="[% c.uri_for_action('/items/unassigned',    [project.id]) %]"><li>Unassigned Items</li></a>
<a href="[% c.uri_for_action('/purchase_list/index', [project.id]) %]"><li>Purchase Lists</li></a>
<a href="[% c.uri_for_action('/print/index',         [project.id]) %]"><li>Printing</li></a>
<a href="[% c.uri_for_action('/shop_section/index',  [project.id]) %]"><li>Shop sections</li></a>
<a href="[% c.uri_for_action('/quantity/index',      [project.id]) %]"><li>Quantities</li></a>
<a href="[% c.uri_for_action('/unit/index',          [project.id]) %]"><li>Units</li></a>
[% END %]
</ul>
</nav>
</header>

<div class="content">
[% FOREACH error IN errors %]
    <p class="error">[% error | xml %]</p>
[% END %]


[% content %]
</div>

<footer>
